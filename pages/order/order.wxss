/* pages/order/order.wxss */
.swiper-container{
    height: 400rpx;
}

swiper image{
    width: 100%;
    height: 100%;
}

.list-left-menu{
    float: left;
    width: 170rpx;
    height: 100%;
    box-sizing: border-box;
    background-color: #efefef;
    padding: 0rpx 0rpx;
}
.list-right-menu {
    float: right;
    padding: 6rpx 8rpx;
}
.list-menu-name{
    text-align: center;
    font-size: 24rpx;
    margin: 16rpx;
}

.list-left-menu-box-unselect {
    border-left: 4px solid #F8DB5B;
    border-radius: 8rpx;
    padding: 10rpx;
    border-bottom: 3px solid #e3e3e3;
    height: 72rpx;
    color: #767a7f;
    background: #efefef;
  }
  
.list-left-menu-box-selected {
    border-left: 4px solid #F8DB5B;
    padding: 10rpx;
    height: 72rpx;
    color: #337597;
    border-left: 3px solid #337597;
    background: white;
}
/* 右边菜单栏 */
.list-tab {
    margin-left: 173rpx;
    font-size: 25rpx;
    background: #337597;
    color: white;
    padding-left: 31rpx;
    height: 56rpx;
    vertical-align: middle;
    /* 把文字垂直居中 */
    line-height: 56rpx;
  }
  
  .content-list {
    margin-left: 173rpx;
    display: flex;
    border-bottom: 2px solid #e3e3e3;
    background-color: white;
    padding-left: -30rpx;
  }
  
  .list-image {
    width: 114rpx;
    margin-top: 0rpx;
  }
  
  .list-image-box {
    width: 160rpx;
    height: 72px;
    text-align: center;
  }

  .cart-add{
    border: none;
    height: 50rpx;
    margin-left: 140rpx;
    border-radius: 50rpx;
    background-color: #F8DB5B;
  }

  .issue-name {
    width: 200px;
    font-size: 30rpx;
    margin-top: 30rpx;
    color: #2c2f33;
    font-weight: 900;
    font-family: "等线";
  }

.plus-icon {
    float: right;
    color: #e53085;
    font-size: 46rpx;
    margin-right: 48rpx;
    margin-top: -10rpx;
  }
  
.icon-li-circle {
    margin-left: 15px;
    font-size: 20px;
  }
  
.plus-icon {
    float: right;
    color: #3b8668;
    font-size: 46rpx;
  }



/* 购物车 */

.operate-bar {
    z-index: 10001;
    /* 把div固定在底部 */
    position: fixed;
    bottom: 0px;
    height: 55px;
    width: 100%;
    display: flex;
  }
  
  .gouwuche {
    width: 75%;
    background: #3c3e41;
    height: 100%;
  }
  
  .gouwuche image{
      margin-top: 0rpx;
      width: 80rpx;
      height: 80rpx;
  }

  .gouwuche-icon {
    font-size: 40px;
    color: #87888e;
    margin-left: 10px;
    position: relative;
    margin-top: -10px;
  }
  
  .activity-color {
    color: #ff9c35;
  }
  
  .number-msg {
    padding: 1px 7px;
    border-radius: 50%;
    background: red;
    color: white;
    font-size: 14px;
    position: absolute;
    text-align: center;
    top: 0px;
    right: 0rpx;
  }
  
  .gouwuche-price {
    color: white;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    margin-top: -12rpx;
    margin-left: 50rpx;
  }
  
  .submit-btn {
    height: 100%;
    background: #2c2f33;
    width: 25%;
    display: flex;
  }
  
  .submit-btn-label {
    color: #909498;
    font-size: 15px;
    margin: auto;
  }
  
  .activity-color-bg {
    background: #ff9c35;
  }
  
  .color-white {
    color: white;
  }
  